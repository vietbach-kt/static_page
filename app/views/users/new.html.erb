<% provide(:title, 'Sign up') %>
<div class="container">
<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Create Account</h4>
	<p class="text-center">Get started with your free account</p>
	<p>
        <%= link_to  "www.twitter.com", class: "btn btn-block btn-twitter" do %>
            <i class="fab fa-twitter">Login via Twitter</i>
        <%end%>
        <%= link_to "www.facebook.com", class: "btn btn-block btn-facebook" do %>
            <i class="fab fa-facebook-f">Login via Facebook</i>
        <%end%>
	</p>
	<p class="divider-text">
        <span class="bg-light">OR</span>
    </p>
	<%= form_for @user do |f| %>
    <%= render 'shared/error_messages' %>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
        </div> <!-- form-group// -->                                      
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
        </div> <!-- form-group// -->      
        <%# <p class="text-center">Have an account? <a href="">Log In</a> </p>                                                                  %>
    <% end %>
</article>
</div> <!-- card.// -->

</div> 
<!--container end.//-->