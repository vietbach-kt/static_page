<%= form_for @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
        </div> <!-- form-group// -->                                      
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
        </div> <!-- form-group// -->      
        <div class="text-center">Already have an account? <%= link_to "Login", login_path%></div>                                                                 
    <% end %>